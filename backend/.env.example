# Configuración del servidor
NODE_ENV=development
PORT=5000
HOST=localhost

# Base de datos
MONGODB_URI=mongodb://localhost:27017/osintargy

# JWT
JWT_SECRET=osintargy_jwt_secret_key_2025_change_in_production
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=osintargy_refresh_secret_key_2025_change_in_production
JWT_REFRESH_EXPIRE=7d

# Frontend URL para CORS
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Archivos
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Email (opcional)
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@osintargy.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Cache
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# APIs externas (opcional)
VIRUSTOTAL_API_KEY=
SHODAN_API_KEY=

# Seguridad
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=7200000
PASSWORD_RESET_EXPIRE=3600000

# Aplicación
APP_HOMEPAGE=https://osintargy.com
SUPPORT_EMAIL=soporte@osintargy.com

# Desarrollo
SEED_DATABASE=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
LOG_REQUESTS=true