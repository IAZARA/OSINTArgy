# Frontend URL para CORS
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Archivos
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Desarrollo
SEED_DATABASE=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
LOG_REQUESTS=true